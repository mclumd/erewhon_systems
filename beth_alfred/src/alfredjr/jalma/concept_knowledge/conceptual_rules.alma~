//Concept Look-up Rules:

	+isa(U, utterance) & 
	isa(U, current) &
	has(U, word, X) & 
	has(X, spelling, Sp) & 
	isa(L, lexeme) &
	has(roverese, lexeme, L) &
	has(L, spelling, Sp) 
		-> has(L, token, X).

	+isa(L, lexeme) &
	has(roverese, lexeme, L) &
	has(L, token, X) &
	has(L, category, Y)
		-> has(X, category, Y).

